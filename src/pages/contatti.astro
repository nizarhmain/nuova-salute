---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="it">
	<head>
		<BaseHead title={`${SITE_TITLE} - Contatti`} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="mx-auto max-w-2xl">
			<h1 class="text-4xl font-bold leading-tight mb-4">Contattaci</h1>
			<p class="leading-relaxed">Siamo qui per rispondere alle tue domande e aiutarti.</p>
		</main>
		<Footer />
	</body>
</html>
