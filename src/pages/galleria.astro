---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="it">
	<head>
		<BaseHead title={`${SITE_TITLE} - Galleria`} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="mx-auto px-6 max-w-2xl">
			<h1 class="text-4xl font-bold leading-tight mb-4">Galleria</h1>
			<p class="leading-relaxed">Scopri le nostre strutture e i nostri servizi attraverso la galleria fotografica.</p>
			<section>
				<h2 class="text-2xl font-bold mt-8 mb-3">Foto della Struttura</h2>
				<div class="my-8 p-8 bg-gray-100 rounded-lg">
					<p>Le immagini verranno aggiunte presto...</p>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>
