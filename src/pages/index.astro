---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
import nurses from "../assets/nurses.png";
import sidenurse from "../assets/sidenurse.jpg";
import {
  HandHeart,
  Stethoscope,
  Clock,
  Users,
  Network,
  Target,
  FileText,
  Ambulance,
  Home,
  Dumbbell,
  Clipboard,
} from "@lucide/astro";
---

<!doctype html>
<html lang="it">
  <head>
    <BaseHead title={`${SITE_TITLE}`} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main>
      <!-- Hero Section with Image -->
      <section class="">
        <img src={nurses.src} alt="Hero Image" />
      </section>

      <!-- Two Column Section: Intro Text + Image -->
      <section class="mx-auto max-w-6xl py-16">
        <h2 class="text-3xl font-bold mb-6">Chi Siamo</h2>
        <div class="md:columns-2 columns-1">
          <div>
            <p class="leading-relaxed mb-4">
              Nuova Salute è un centro medico specializzato che offre una vasta
              gamma di servizi per la tua salute e il tuo benessere. Il nostro
              team di professionisti è dedicato a garantire la migliore qualità
              di cure.
            </p>
            <p class="leading-relaxed">
              Con anni di esperienza nel settore sanitario, ci impegniamo a
              fornire soluzioni personalizzate per ogni paziente.
            </p>
          </div>
          <!-- Right Column: Image Placeholder -->
          <div>
            <img
              src={sidenurse.src}
              alt="Nurses"
              class="mt-4 rounded-lg shadow-md"
            />
          </div>
        </div>
      </section>

      <!-- Services Section with Buttons -->
      <section class="mx-auto max-w-6xl  py-16">
        <h2 class="text-3xl font-bold mb-12">I Nostri Servizi</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <div
            class="link-box flex gap-2 justify-center items-center p-4 drop-shadow-md"
          >
            <a
              href="/nuova-salute/servizi/assistenza-infermieristica"
              class="flex flex-col justify-between items-center size-full text-center"
            >
              <HandHeart size={36} />
              <p>Assistenza Infermieristica</p>
            </a>
          </div>

          <div
            class="link-box flex gap-2 justify-center items-center p-4 drop-shadow-md"
          >
            <a
              href="/nuova-salute/servizi/assistenza-domicilio"
              class="flex flex-col justify-between items-center size-full text-center"
            >
              <Home size={36} />
              <p>Assistenza a Domicilio</p>
            </a>
          </div>

          <div
            class="link-box flex gap-2 justify-center items-center p-4 drop-shadow-md"
          >
            <a
              href="/nuova-salute/servizi/fisioterapia-domicilio"
              class="flex flex-col justify-between items-center size-full text-center"
            >
              <Dumbbell size={36} />
              <p>Fisioterapia a Domicilio</p>
            </a>
          </div>

          <div
            class="link-box flex gap-2 justify-center items-center p-4 drop-shadow-md"
          >
            <a
              href="/nuova-salute/servizi/assistenza-burocratica"
              class="flex flex-col justify-between items-center size-full text-center"
            >
              <Clipboard size={36} />
              <p>Ass. Burocratica e Amministrativa</p>
            </a>
          </div>

          <div
            class="link-box flex gap-2 justify-center items-center p-4 drop-shadow-md"
          >
            <a
              href="/nuova-salute/servizi/trasporto-ambulanza"
              class="flex flex-col justify-between items-center size-full text-center"
            >
              <Ambulance size={36} />
              <p>Trasporto in Ambulanza</p>
            </a>
          </div>

          <div
            class="link-box flex gap-2 justify-center items-center p-4 drop-shadow-md"
          >
            <a
              href="/nuova-salute/servizi/consulenza-medico"
              class="flex flex-col justify-between items-center size-full text-center"
            >
              <Stethoscope size={36} />
              <p>Consulenza con Medico</p>
            </a>
          </div>
        </div>

        <div class="flex justify-center mt-12">
          <a
            href="/nuova-salute/servizi"
            class="bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-12 rounded-lg transition duration-200"
          >
            Scopri Tutti i Servizi
          </a>
        </div>
      </section>

      <!-- Strengths Section: 5 Circle Points -->
      <section class="mx-auto max-w-6xl py-16">
        <h2 class="text-3xl font-bold mb-12">I Nostri Punti di Forza</h2>
        <div class="grid grid-cols-1 md:grid-cols-5 gap-12">
          <!-- Point 1: 24/7 -->
          <div class="flex flex-col items-center">
            <Clock size={40} class="text-primary mb-4" />
            <p class="text-md text-gray-700">Disponibilità 24/7</p>
          </div>

          <!-- Point 2: Team Qualificato -->
          <div class="flex flex-col items-center">
            <Users size={40} class="text-primary mb-4" />
            <p class="text-md text-gray-700">Team Specializzato</p>
          </div>

          <!-- Point 3: Rete Assistenziale -->
          <div class="flex flex-col items-center">
            <Network size={40} class="text-primary mb-4" />
            <p class="text-md text-gray-700">Rete Assistenziale Integrata</p>
          </div>

          <!-- Point 4: Punto Unico di Riferimento -->
          <div class="flex flex-col items-center">
            <Target size={40} class="text-primary mb-4" />
            <p class="text-md text-gray-700">Punto Unico di Riferimento</p>
          </div>

          <!-- Point 5: Supporto Amministrativo -->
          <div class="flex flex-col items-center">
            <FileText size={40} class="text-primary mb-4" />
            <p class="text-md text-gray-700">Supporto Amministrativo</p>
          </div>
        </div>
      </section>

      <!-- Booking Form Section -->
      <section class="py-1">
        <h2 class="text-3xl font-bold mb-4">Prenota Ora</h2>
        <form class="space-y-3">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="nome" class="block text-gray-700 font-semibold mb-2"
                >Nome</label
              >
              <input
                type="text"
                id="nome"
                name="nome"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-600"
                required
              />
            </div>
            <div>
              <label
                for="cognome"
                class="block text-gray-700 font-semibold mb-2">Cognome</label
              >
              <input
                type="text"
                id="cognome"
                name="cognome"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-600"
                required
              />
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label
                for="telefono"
                class="block text-gray-700 font-semibold mb-2">Telefono</label
              >
              <input
                type="tel"
                id="telefono"
                name="telefono"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-600"
                required
              />
            </div>
            <div>
              <label for="email" class="block text-gray-700 font-semibold mb-2"
                >Email</label
              >
              <input
                type="email"
                id="email"
                name="email"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-600"
                required
              />
            </div>
          </div>

          <div>
            <label
              for="messaggio"
              class="block text-gray-700 font-semibold mb-2">Messaggio</label
            >
            <textarea
              id="messaggio"
              name="messaggio"
              rows="5"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-600"
              required></textarea>
          </div>

          <div class="flex justify-center">
            <button
              type="submit"
              class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-12 rounded-lg transition duration-200"
            >
              Invia Prenotazione
            </button>
          </div>
        </form>
      </section>

      <!-- Location Section -->
      <section class="mx-auto max-w-6xl">
        <h2 class="text-3xl font-bold mb-8">Trovaci</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
          <div>
            <h3 class="text-2xl font-bold mb-4">Il Nostro Indirizzo</h3>
            <p class="text-lg text-gray-700 mb-6">Via Giuseppe Garibaldi</p>
            <a
              href="https://www.google.com/maps/search/Via+Giuseppe+Garibaldi+Cagliari"
              target="_blank"
              class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-8 rounded-lg transition duration-200"
            >
              Visualizza su Google Maps
            </a>
          </div>
          <div
            class="bg-gray-200 h-96 flex items-center justify-center rounded-lg"
          >
            <div class="text-center text-gray-600">
              <p class="text-lg">Mappa</p>
              <p class="text-sm">[Placeholder per mappa Google Maps]</p>
            </div>
          </div>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
