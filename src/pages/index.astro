---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="it">
	<head>
		<BaseHead title={`${SITE_TITLE}`} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<!-- Hero Section with Image -->
			<section class="w-full bg-gray-200 py-32 flex items-center justify-center">
				<div class="text-center text-gray-600">
					<p class="text-sm">[Placeholder per immagine hero]</p>
				</div>
			</section>

			<!-- Two Column Section: Intro Text + Image -->
			<section class="mx-auto px-6 max-w-6xl py-16">
				<div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
					<!-- Left Column: Intro Text -->
					<div>
						<h2 class="text-3xl font-bold mb-6">Chi Siamo</h2>
						<p class="text-gray-700 leading-relaxed mb-4">
							Nuova Salute è un centro medico specializzato che offre una vasta gamma di servizi per la tua salute e il tuo benessere. Il nostro team di professionisti è dedicato a garantire la migliore qualità di cure.
						</p>
						<p class="text-gray-700 leading-relaxed">
							Con anni di esperienza nel settore sanitario, ci impegniamo a fornire soluzioni personalizzate per ogni paziente.
						</p>
					</div>
					<!-- Right Column: Image Placeholder -->
					<div class="bg-gray-200 h-96 flex items-center justify-center rounded-lg">
						<div class="text-center text-gray-600">
							<p class="text-lg">Immagine</p>
							<p class="text-sm">[Placeholder]</p>
						</div>
					</div>
				</div>
			</section>

			<!-- Services Section with Buttons -->
			<section class="mx-auto px-6 max-w-6xl py-16">
				<h2 class="text-3xl font-bold mb-12 text-center">I Nostri Servizi</h2>
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
					<a href="/servizi/consulenza-medica" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-6 px-8 rounded-lg text-center transition duration-200">
						Consulenza Medica
					</a>
					<a href="/servizi/terapie-specializzate" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-6 px-8 rounded-lg text-center transition duration-200">
						Terapie Specializzate
					</a>
					<a href="/servizi/programmi-wellness" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-6 px-8 rounded-lg text-center transition duration-200">
						Programmi di Wellness
					</a>
				</div>
				<div class="flex justify-center">
					<a href="/servizi" class="bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-12 rounded-lg transition duration-200">
						Scopri Tutti i Servizi
					</a>
				</div>
			</section>

			<!-- Strengths Section: 5 Circle Points -->
			<section class="mx-auto px-6 max-w-6xl py-16">
				<h2 class="text-3xl font-bold mb-12 text-center">I Nostri Punti di Forza</h2>
				<div class="grid grid-cols-1 md:grid-cols-5 gap-8">
					<!-- Point 1: 24/7 -->
					<div class="flex flex-col items-center">
						<p class="text-center text-gray-700 font-semibold">Disponibilità 24/7</p>
					</div>

					<!-- Point 2: Team Qualificato -->
					<div class="flex flex-col items-center">
						<p class="text-center text-gray-700 font-semibold">Team Specializzato</p>
					</div>

					<!-- Point 3: Rete Assistenziale -->
					<div class="flex flex-col items-center">
						<p class="text-center text-gray-700 font-semibold">Rete Assistenziale Integrata</p>
					</div>

					<!-- Point 4: Punto Unico di Riferimento -->
					<div class="flex flex-col items-center">
						<p class="text-center text-gray-700 font-semibold">Punto Unico di Riferimento</p>
					</div>

					<!-- Point 5: Supporto Amministrativo -->
					<div class="flex flex-col items-center">
						<p class="text-center text-gray-700 font-semibold">Supporto Amministrativo</p>
					</div>
				</div>
			</section>

			<!-- Booking Form Section -->
			<section class="bg-gray-50 py-16">
				<div class="mx-auto px-6 max-w-2xl">
					<h2 class="text-3xl font-bold mb-8 text-center">Prenota Ora</h2>
					<form class="space-y-6">
						<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
							<div>
								<label for="nome" class="block text-gray-700 font-semibold mb-2">Nome</label>
								<input type="text" id="nome" name="nome" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-600" required />
							</div>
							<div>
								<label for="cognome" class="block text-gray-700 font-semibold mb-2">Cognome</label>
								<input type="text" id="cognome" name="cognome" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-600" required />
							</div>
						</div>

						<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
							<div>
								<label for="telefono" class="block text-gray-700 font-semibold mb-2">Telefono</label>
								<input type="tel" id="telefono" name="telefono" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-600" required />
							</div>
							<div>
								<label for="email" class="block text-gray-700 font-semibold mb-2">Email</label>
								<input type="email" id="email" name="email" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-600" required />
							</div>
						</div>

						<div>
							<label for="messaggio" class="block text-gray-700 font-semibold mb-2">Messaggio</label>
							<textarea id="messaggio" name="messaggio" rows="5" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-600" required></textarea>
						</div>

						<div class="flex justify-center">
							<button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-12 rounded-lg transition duration-200">
								Invia Prenotazione
							</button>
						</div>
					</form>
				</div>
			</section>

			<!-- Location Section -->
			<section class="mx-auto px-6 max-w-6xl py-16">
				<h2 class="text-3xl font-bold mb-8 text-center">Trovaci</h2>
				<div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
					<div>
						<h3 class="text-2xl font-bold mb-4">Il Nostro Indirizzo</h3>
						<p class="text-lg text-gray-700 mb-6">Via Giuseppe Garibaldi</p>
						<a href="https://www.google.com/maps/search/Via+Giuseppe+Garibaldi+Cagliari" target="_blank" class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-8 rounded-lg transition duration-200">
							Visualizza su Google Maps
						</a>
					</div>
					<div class="bg-gray-200 h-96 flex items-center justify-center rounded-lg">
						<div class="text-center text-gray-600">
							<p class="text-lg">Mappa</p>
							<p class="text-sm">[Placeholder per mappa Google Maps]</p>
						</div>
					</div>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>
